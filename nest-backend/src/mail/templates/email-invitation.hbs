
{{#> layout.partial }}

<!-- Main content -->

<div class="f-fallback">
    <h1
        style="
            margin-top: 0;
            color: #333333;
            font-size: 22px;
            font-weight: bold;
            text-align: left;
        "
        align="left"
    >
        Email invitation
    </h1>

    <p
        style="
            font-size: 16px;
            line-height: 1.625;
            color: #272727;
            margin: 0.4em 0 1.1875em;
        "
    >
        We are please to inform you that {{ organization }}
        has just invited you to join their workspace. Please
        click on the below button to accept the invitation.
    </p>


    <!-- Action -->
    {{>action.partial action=inviteEmailUrl text='Accept Invitation' }}

    <!-- URL Copy -->
    {{>url-copy.partial url=inviteEmailUrl }}
</div>

{{/layout.partial}}

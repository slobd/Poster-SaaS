<tr>
    <td
        style="
            word-break: break-word;
            font-family: 'Roboto', Helvetica, Arial, sans-serif;
            font-size: 16px;
        "
    >
        <table
            class='email-footer'
            align='center'
            width='570'
            cellpadding='0'
            cellspacing='0'
            role='presentation'
            style='
                width: 570px;
                -premailer-width: 570px;
                -premailer-cellpadding: 0;
                -premailer-cellspacing: 0;
                text-align: center;
                margin: 0 auto;
                padding: 0;
            '
        >
            <tr>
                <td
                    class='content-cell'
                    align='center'
                    style="
                        word-break: break-word;
                        font-family: 'Roboto', Helvetica, Arial, sans-serif;
                        font-size: 16px;
                        padding: 45px;
                    "
                >

                    <p
                        class='f-fallback sub align-center'
                        style='
                            font-size: 13px;
                            line-height: 1.625;
                            text-align: center;
                            color: #a8aaaf;
                            margin: 0.4em 0 1.1875em;
                        '
                        align='center'
                    >
                        {{address.name}}.
                        {{address.slogan}}
                        <br />{{address.companyName}}
                        <br />{{address.street}}
                        {{address.houseNumber}}
                        <br />{{address.more}}
                        <br />{{address.zipCode}}
                        {{address.city}}
                    </p>
                </td>
            </tr>
        </table>
    </td>
</tr>
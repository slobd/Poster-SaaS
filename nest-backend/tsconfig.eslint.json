{
    // extend your base config so you don't have to redefine your compilerOptions
    "extends": "./tsconfig.json",
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "./.eslintrc.js",
        "@types/*.d.ts"
        // etc
    ],
    // IF (and only if) you have a mixed JS/TS codebase - you should also turn on JS support
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true
    }
}
